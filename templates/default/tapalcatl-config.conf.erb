listen <%= node[:tapalcatl][:listen] %>
handler <%= @handler_cfg.to_json %>
<%- if node[:tapalcatl][:healthcheck] -%>
healthcheck <%= node[:tapalcatl][:healthcheck] %>
<%- end -%>
<%- if node[:tapalcatl][:pool][:enabled] -%>
poolnumentries <%= node[:tapalcatl][:pool][:num] %>
poolentrysize <%= node[:tapalcatl][:pool][:entry] %>
<%- end -%>
<%- if node[:tapalcatl][:metrics][:enabled] -%>
metrics-statsd-addr <%= node[:tapalcatl][:metrics][:statsd][:addr] %>
metrics-statsd-prefix <%= node[:tapalcatl][:metrics][:statsd][:prefix] %>
<%- end -%>
<%- if node[:tapalcatl][:expvars][:serve] -%>
expvar-serve <%= node[:tapalcatl][:expvars][:serve] %>
<% end -%>
<%- if node[:tapalcatl][:expvars][:log_interval] > 0 -%>
expvar-log-interval <%= node[:tapalcatl][:expvars][:log_interval] %>
<% end -%>
